<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:interpolator="@android:anim/accelerate_interpolator">

    <scale
        android:fromXScale="0.7" android:toXScale="1"
        android:fromYScale="0.7" android:toYScale="1"
        android:pivotX="50%" android:pivotY="50%"
        android:duration="160" />
    <scale
        android:fromXScale="1" android:toXScale="1.1"
        android:fromYScale="1" android:toYScale="1.1"
        android:pivotX="50%" android:pivotY="50%"
        android:startOffset="20"
        android:duration="100" />
    <scale 
        android:fromXScale="1.1" android:toXScale="0.9"
        android:fromYScale="1.1" android:toYScale="0.9"
        android:pivotX="50%" android:pivotY="50%"
        android:startOffset="20"
        android:duration="200" />
    <scale
        android:fromXScale="0.9" android:toXScale="1"
        android:fromYScale="0.9" android:toYScale="1"
        android:pivotX="50%" android:pivotY="50%"
        android:startOffset="20"
        android:duration="200" />
</set>